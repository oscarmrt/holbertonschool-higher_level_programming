#!/usr/bin/python3
if __name__ == '__main__':
    import sys
    if len(sys.argv) == 1:
        print('{:d} arguments.'.format(len(sys.argv) - 1))
    elif len(sys.argv) == 2:
        print('{:d} argument:'.format(len(sys.argv) - 1))
        for x in range(1, len(sys.argv)):
            print('{:d}: {:s}'.format(x, sys.argv[x])
        else:
            print('{:d} arguments:'.format(len(sys.argv) - 1))
            for x in range(1, len(sys.argv)):
                print('{:d}: {:s}'.format(x, sys.argv[x])
